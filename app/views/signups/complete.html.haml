.progress-wrap
  .progress-image
  = link_to image_tag('/img/logo_red.svg', width: '150', height: '100'), root_path
  %ur.progress-bar
    %li.progress-bar-red
      %span.return-color 会員情報
    %li.progress-bar-red
      %span.return-color 電話番号認証
    %li.progress-bar-red
      %span.return-color お届け先住所入力
    %li.progress-bar-red
