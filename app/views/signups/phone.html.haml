.progress-wrap
  .progress-image
  = link_to image_tag('/img/logo_red.svg', width: '150', height: '100'), root_path
  %ur.progress-bar
    %li.progress-bar-name-gray
      会員情報
      %span.return-color-box-f
    %li.progress-bar-name-gray-name-red
      電話番号認証
      %span.return-color-box-red
    %li.progress-bar-name-gray
      お届け先住所入力
      %span.return-color-box-before-gray
    %li.progress-bar-name-gray
      支払い方法
      %span.return-color-box-before-gray
    %li.progress-bar-name-gray
      完了
      %span.return-color-box-l
  .progress-bar-clear

.member-wrap
  %h2 電話番号の確認
  = form_for @user, url: address_signups_path, method: :get do |f|
    .field
      = f.label :phone_number, "携帯電話の番号", class: "member-text"
      %br/
      = f.text_field :phone_number, autofocus: true, class: "field-input", placeholder: "携帯電話の番号を入力",autocomplete: "phone_number"
    

      .member-person-wrap-suer-text
        %p 本人確認のため、携帯電話のSMS(ショートメッセージサービス)を利用して認証を行います。
    .field
    = f.submit "次へ進む", class: "submit-button"
    .field
      .member-person-wrap-suer-text
        %p ※電話番号は本人確認や不正利用防止のために利用します。他のユーザーに公開されることはありません。

    .submit-button-text
      = link_to "電話番号の確認が必要な理由＞"
  
= render 'signups/footer'
