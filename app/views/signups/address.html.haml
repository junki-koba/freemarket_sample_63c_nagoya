.member-wrap
  %h2 お届け先住所入力
  = form_for @user, url: check_signups_path, method: :get do |f|

    -# .field
    -#   = f.label :address_last_name, "お名前(全角)", class: "member-text"
    -#   %span.required 必須
    -#   %br/
    -#   = f.text_field :address_last_name, autofocus: true, class: "field-input-half", placeholder: "例) 山田",autocomplete: "address_last_name"
    -#   = f.text_field :address_first_name, autofocus: true, class: "field-input-half", placeholder: "例) 彩",autocomplete: "address_first_name"

    -# .field
    -#   = f.label :address_last_name_kana, "お名前カナ(全角)", class: "member-text"
    -#   %span.required 必須
    -#   %br/
    -#   = f.text_field :address_last_name_kana, autofocus: true, class: "field-input-half", placeholder: "例) ヤマダ",autocomplete: "address_last_name_kana"
    -#   = f.text_field :address_first_name_kana, autofocus: true, class: "field-input-half", placeholder: "例) アヤ",autocomplete: "address_first_name_kana"

    .field
      = f.label :postal_code, "郵便番号", class: "member-text"
      %span.required 必須
      %br/
      = f.text_field :postal_code, autofocus: true, class: "field-input", placeholder: "例) 123-4567",autocomplete: "postal_code"
    
    .field
      = f.label :prefecture, "都道府県", class: "member-text"
      %span.required 必須
      %br/
      = f.email_field :prefecture, autofocus: true, class: "field-input", placeholder: "北海道",autocomplete: "prefecture"
    
    .field
      = f.label :city, "市区町村", class: "member-text"
      %span.required 必須
      %br/
      = f.email_field :city, autofocus: true, class: "field-input", placeholder: "例) 横浜市緑区",autocomplete: "city"
    
    .field
      = f.label :address, "番地", class: "member-text"
      %span.required 必須
      %br/
      = f.email_field :address, autofocus: true, class: "field-input", placeholder: "例) 青山1-1-1",autocomplete: "address"
    
    .field
      = f.label :building_name, "建物名", class: "member-text"
      %span.required-any 任意
      %br/
      = f.email_field :building_name, autofocus: true, class: "field-input", placeholder: "例) 柳ビル103",autocomplete: "building_name"
    
    .field
      = f.label :phone_number, "電話", class: "member-text"
      %span.required-any 任意
      %br/
      = f.email_field :phone_number, autofocus: true, class: "field-input", placeholder: "例) 09012345678",autocomplete: "phone_number"

    .field
    = f.submit "次へ進む", class: "submit-button"

